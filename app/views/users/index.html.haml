%h2 Users

%ul
  - @users.each do |user|
    %li= user.name


.container
  %h3 Add new user
  = form_with(model: User.new) do |form|
    .mb-3
      = form.label :name, 'Name', class: 'form-label'
      = form.text_field :name, class: 'form-control'
    = form.submit class: 'btn btn-primary'

%br
%hr

%p
  = link_to 'Go to messages', messages_path
